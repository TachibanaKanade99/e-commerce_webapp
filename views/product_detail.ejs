<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content"width=device-width, initial-scale=1.0"> 
	<title> JustShop Website</title>
	<%- include('layout/css_links.ejs') %>
</head>

<body>
    <%-include('./layout/header.ejs');%>

    <div class="container">
        <div class="mt-5">
            <span class="h3">Product detail</span>
            <a href= <%= "/products/" + currentCategory + "/" + currentPage %> class="btn btn-primary back-btn mb-2 px-4">Back</a>
            <hr class="my-0">
        </div>

        <div class="product-detail">
            <div class="row my-3">
                <div class="col-6 col-md-6">
                    <img class="col-10" src= <%= product.image_url %> alt="this-is-image-of-product">
                </div>
                <div class="col-6 col-md-6 mt-5">
                    <div class="h2"> <%= product.product_name %> </div>
                    <div class="py-2">
                        <span class="h4">Brand: </span>
                        <span class="product-info"> <%= product.brand %> </span>
                    </div>
                    <div  class="py-2">
                        <span class="h4">Made in: </span>
                        <span class="product-info"> <%= product.made_in %> </span>
                    </div>
                    <div class="py-2">
                        <span class="h4">Rating: </span>
                        <span class="rating">
                            <i class="fa fa-star" ></i>
                            <i class="fa fa-star" ></i>
                            <i class="fa fa-star" ></i>
                            <i class="fa fa-star-half-o" ></i>
                            <i class="fa fa-star-o" ></i>
                        </span>
                    </div>
                    <div class="mt-3 product-price">
                        20000d
                    </div>
                    <div class="quantity">
                        
                    </div>
                    <div class="add-to-cart">
                        <div class="justify-content-center text-center">
                            <div class="buttons d-flex flex-row">
                                <div class="cart">
                                    <i class="fa fa-shopping-cart"></i>
                                </div> 
                                <button class="btn btn-success cart-button px-5" onclick="addToCart(<%= '\"' + product.product_name + '\"'%>, 20000)">
                                    <span class="dot">1</span>
                                    Add to cart 
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div style="height: 50vh;"></div>

    <%-include('./layout/footer.ejs');%>
</body>